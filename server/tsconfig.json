{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "lib": ["es6"],
      "outDir": "dist",
      "rootDir": "src",
      "esModuleInterop": true,
      "sourceMap": true,
      "strict": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata":true 
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }